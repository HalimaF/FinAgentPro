# FinAgent Pro - Environment Variables Template

# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==================== API Keys ====================

# OpenAI (for GPT-4 Vision and text models)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face (for FinBERT and other models)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Google Cloud Vision (for advanced OCR)
GOOGLE_CLOUD_API_KEY=your_google_cloud_key_here

# ==================== Database ====================

DATABASE_URL=postgresql://user:password@localhost:5432/finagent_pro
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finagent_pro
DB_USER=finagent_user
DB_PASSWORD=your_secure_password_here

# ==================== Redis ====================

REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ==================== RabbitMQ ====================

RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# ==================== JWT Authentication ====================

JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==================== Application Settings ====================

# Demo mode (1 = simulated AI, 0 = real models)
DEMO_MODE=0

# Environment (development, staging, production)
ENVIRONMENT=development

# API URL
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ==================== Storage ====================

# File storage location
STORAGE_PATH=./storage
UPLOAD_MAX_SIZE_MB=10

# AWS S3 (optional, for production)
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_S3_BUCKET=finagent-pro-storage
# AWS_REGION=us-east-1

# ==================== Email (optional) ====================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@finagent.pro

# ==================== Monitoring (optional) ====================

# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=INFO

# ==================== watsonx Integration ====================

WATSONX_API_KEY=your_watsonx_api_key
WATSONX_URL=https://api.watsonx.ai
WATSONX_PROJECT_ID=your_project_id

# ==================== ML Model Settings ====================

# Hugging Face cache directory
HF_HOME=~/.cache/huggingface

# Model inference settings
USE_GPU=false
MAX_MODEL_MEMORY_GB=4

# ==================== OCR (Tesseract) ====================

# Path to Tesseract OCR executable (Windows default install path). Uncomment if pytesseract cannot auto-detect.
# Example after installing from UB Mannheim build: C:\\Program Files\\Tesseract-OCR\\tesseract.exe
TESSERACT_PATH=C:\\Program Files\\Tesseract-OCR\\tesseract.exe

# ==================== IBM Orchestrate ====================

# Shared secret for IBM watsonx Orchestrate webhook (set the same value in Orchestrate Skill)
IBM_ORCH_API_KEY=change_me_for_competition

