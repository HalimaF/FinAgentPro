{
  "$schema": "https://watsonx.ibm.com/orchestrate/skill.schema.json",
  "name": "FinAgent Pro",
  "description": "Finance automation skill powered by FinAgent Pro agents",
  "version": "1.0.0",
  "authentication": {
    "type": "apiKey",
    "in": "header",
    "name": "X-IBM-ORCH-KEY",
    "valuePlaceholder": "${IBM_ORCH_API_KEY}"
  },
  "connection": {
    "baseUrl": "https://YOUR_PUBLIC_URL/"
  },
  "actions": [
    {
      "name": "Classify Expense",
      "operationId": "expense.classify",
      "purpose": "Extracts and classifies an expense receipt",
      "http": {
        "method": "POST",
        "path": "webhooks/ibm-orchestrate"
      },
      "payload": {
        "action": "expense.classify",
        "payload": {
          "ocrText": "${ocrText}",
          "fileUrl": "${fileUrl}",
          "userId": "${userId}"
        }
      },
      "inputs": [
        { "name": "ocrText", "type": "string", "required": false },
        { "name": "fileUrl", "type": "string", "required": false },
        { "name": "userId", "type": "string", "required": false }
      ]
    },
    {
      "name": "Create Invoice",
      "operationId": "invoice.create",
      "purpose": "Creates an invoice for a customer",
      "http": { "method": "POST", "path": "webhooks/ibm-orchestrate" },
      "payload": {
        "action": "invoice.create",
        "payload": { "customer": "${customer}", "items": "${items}" }
      },
      "inputs": [
        { "name": "customer", "type": "string", "required": true },
        { "name": "items", "type": "string", "required": true }
      ]
    },
    {
      "name": "Scan Fraud",
      "operationId": "fraud.scan",
      "purpose": "Scans transactions for fraud signals",
      "http": { "method": "POST", "path": "webhooks/ibm-orchestrate" },
      "payload": { "action": "fraud.scan", "payload": { "transactions": "${transactions}" } },
      "inputs": [ { "name": "transactions", "type": "string", "required": true } ]
    },
    {
      "name": "Forecast Cashflow",
      "operationId": "cashflow.forecast",
      "purpose": "Forecasts cashflow for next period",
      "http": { "method": "POST", "path": "webhooks/ibm-orchestrate" },
      "payload": { "action": "cashflow.forecast", "payload": { "days": "${days}" } },
      "inputs": [ { "name": "days", "type": "integer", "required": false } ]
    },
    {
      "name": "Smart Chat",
      "operationId": "smart.chat",
      "purpose": "Asks FinAgent Pro for insights in natural language",
      "http": { "method": "POST", "path": "webhooks/ibm-orchestrate" },
      "payload": { "action": "smart.chat", "payload": { "query": "${query}" } },
      "inputs": [ { "name": "query", "type": "string", "required": true } ]
    }
  ]
}
